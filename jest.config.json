{
  "collectCoverage": true,
  "collectCoverageFrom": ["src/**/*.ts"],
  "coveragePathIgnorePatterns": [
    "node_modules",
    "interfaces",
    "enums",
    "constants",
    "types",
    "<rootDir>/src/index.ts",
    "<rootDir>/src/utils/index.ts"
  ],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "setupFilesAfterEnv": ["jest-expect-message"],
  "coverageDirectory": "<rootDir>/coverage/",
  "coverageThreshold": {
    "global": {
      "branches": 20,
      "functions": 30,
      "lines": 50,
      "statements": 50
    }
  },
  "verbose": false
}
